{
  "name": "acspec",
  "displayName": "AcSpec",
  "description": "Quickly write arcuchi test case script.",
  "publisher": "Arcuchi",
  "version": "0.2.5",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "repository": "xxx",
  "icon": "extension-icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "AcSpec: 设备通信配置",
        "command": "acspec.equipmentCommunicationConfig"
      },
      {
        "title": "AcSpec: 更新寄存器库",
        "command": "acspec.updateRegisterLibraries"
      },
      {
        "title": "AcSpec: 切换寄存器库",
        "command": "acspec.switchRegisterLibrary"
      },
      {
        "title": "AcSpec: 更新告警码库",
        "command": "acspec.updateAlarmLibraries"
      },
      {
        "title": "AcSpec: 切换告警码库",
        "command": "acspec.switchAlarmLibrary"
      },
      {
        "title": "AcSpec: 打开调试面板",
        "command": "acspec.openDebugPanel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "acspec.openDebugPanel",
          "group": "navigation@1",
          "when": "editorLangId == tcs"
        },
        {
          "command": "acspec.updateRegisterLibraries",
          "group": "navigation@2",
          "when": "editorLangId == tcs"
        },
        {
          "command": "acspec.switchRegisterLibrary",
          "group": "navigation@3",
          "when": "editorLangId == tcs"
        },
        {
          "command": "acspec.updateAlarmLibraries",
          "group": "navigation@4",
          "when": "editorLangId == tcs"
        },
        {
          "command": "acspec.switchAlarmLibrary",
          "group": "navigation@5",
          "when": "editorLangId == tcs"
        },
        {
          "command": "acspec.equipmentCommunicationConfig",
          "group": "navigation@6",
          "when": "editorLangId == tcs"
        }
      ]
    },
    "configuration": {
      "title": "AcSpec",
      "properties": {
        "acspec.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "是否在插件激活时自动更新库文件"
        },
        "acspec.registerLibrary": {
          "type": "string",
          "default": "",
          "description": "当前使用的寄存器库"
        },
        "acspec.registerUrl": {
          "type": "string",
          "default": "https://as.arcuchi.com/updater/RegisterLibrary",
          "description": "寄存器库远程下载地址"
        },
        "acspec.alarmLibrary": {
          "type": "string",
          "default": "",
          "description": "当前使用的告警码库"
        },
        "acspec.alarmUrl": {
          "type": "string",
          "default": "https://as.arcuchi.com/updater/AlarmLibrary",
          "description": "告警码库远程下载地址"
        },
        "acspec.actionUrl": {
          "type": "string",
          "default": "https://as.arcuchi.com/updater/ActionLibrary",
          "description": "动作库远程下载地址"
        },
        "acspec.debugPanelUrl": {
          "type": "string",
          "default": "http://172.16.30.58:8089/debug-panel",
          "description": "远程调试地址"
        },
        "acspec.equipmentCommunicationConfig": {
          "type": "object",
          "default": {
            "host": "192.168.11.10",
            "terminal": "admin"
          },
          "description": "设备通信配置"
        }
      }
    },
    "languages": [
      {
        "id": "tcs",
        "aliases": [
          "TCS"
        ],
        "extensions": [
          ".tcs"
        ],
        "configuration": "./src/config/language.json",
        "icon": {
          "dark": "./src/icon/shortcut.png",
          "light": "./src/icon/shortcut.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "tcs",
        "scopeName": "source.tcs",
        "path": "./src/config/grammars.json"
      }
    ],
    "snippets": [
      {
        "language": "tcs",
        "path": "./src/config/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "pack": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
